<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentalApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/dark_status</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/btn_red</item>
        <item name="colorSecondaryVariant">@color/btn_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
    </style>
    
    <style name="button_red" parent="TextAppearance.MaterialComponents.Button">
        <item name="background">@drawable/btn_shape</item>
        <item name="backgroundTint">@color/btn_red</item>
        <item name="android:height">50dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_material" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_grey</item>
    </style>

    <style name="report_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">5dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>